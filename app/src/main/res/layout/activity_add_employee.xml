<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFE0"
    tools:context=".addEmployee"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/background_header"
        android:padding="10dp">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/icon_back"
            android:layout_weight="3"
            android:padding="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_btn"
            android:layout_weight="1"
            android:text="@string/add_employee"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/exitBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/icon_exit"
            android:layout_weight="3"
            android:padding="10dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText

                android:id="@+id/jabatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Position"
                android:textColorHint="#A9A9A9"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:textColor="#000"
                android:textSize="24sp"
                android:background="@drawable/background_input"
                android:inputType="text">

            </EditText>

            <EditText
                android:id="@+id/divisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="24sp"
                android:hint="Division"
                android:textColorHint="#A9A9A9"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:ems="10"
                android:background="@drawable/background_input"
                android:inputType="text">

            </EditText>

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="24sp"
                android:hint="Username"
                android:textColorHint="#A9A9A9"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:ems="10"
                android:background="@drawable/background_input"
                android:inputType="text">

            </EditText>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="24sp"
                android:hint="Password"
                android:textColorHint="#A9A9A9"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:ems="10"
                android:background="@drawable/background_input"
                android:inputType="textPassword">

            </EditText>

            <EditText
                android:id="@+id/passwordconfirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="24sp"
                android:hint="Password confirmation"
                android:textColorHint="#A9A9A9"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:ems="10"
                android:background="@drawable/background_input"
                android:inputType="textPassword">

            </EditText>

            <EditText
                android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:hint="Fullname"
                android:textColorHint="#A9A9A9"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="24sp"
                android:layout_marginLeft="20dp"
                android:ems="10"
                android:background="@drawable/background_input"
                android:padding="10dp"
                android:inputType="text">

            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:text="Gender"
                android:textColor="#000"
                android:textSize="24sp">

            </TextView>

            <Spinner
                android:id="@+id/gender_spinner"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#1877f2"
                android:background="@drawable/background_view_border"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:padding="10dp"
                android:layout_height="40dp" />

            <EditText
                android:id="@+id/pob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Place of birth"
                android:textColorHint="#A9A9A9"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="#000"
                android:textSize="24sp"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:ems="10"
                android:background="@drawable/background_input"
                android:inputType="text">

            </EditText>

            <TextView
                android:id="@+id/from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date of birth"
                android:textColorHint="#A9A9A9"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="#000"
                android:textSize="24sp"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:ems="10"
                android:background="@drawable/background_input"/>

            <EditText
                android:id="@+id/alamat"
                android:layout_width="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:textColorHint="#A9A9A9"
                android:textColor="#000"
                android:textSize="24sp"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:ems="10"
                android:background="@drawable/background_input"
                android:inputType="textMultiLine">

            </EditText>

            <EditText
                android:id="@+id/phonenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:hint="Phone number"
                android:textColorHint="#A9A9A9"
                android:textColor="#000"
                android:textSize="24sp"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:ems="10"
                android:background="@drawable/background_input"
                android:inputType="text">

            </EditText>

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="24sp"
                android:hint="Email"
                android:textColorHint="#A9A9A9"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:ems="10"
                android:background="@drawable/background_input"
                android:inputType="text">

            </EditText>

            <Button
                android:id="@+id/addEmployeeBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_btn"
                android:text="@string/add_employee"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:padding="5dp"
                android:ems="10"
                android:layout_gravity="center"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>