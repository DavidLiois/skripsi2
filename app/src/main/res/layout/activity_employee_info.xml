<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFE0"
    tools:context=".employeeInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/background_header"
        android:padding="10dp">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/icon_back"
            android:layout_weight="3"
            android:padding="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_btn"
            android:layout_weight="1"
            android:text="@string/employee_info"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/exitBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/icon_exit"
            android:layout_weight="3"
            android:padding="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_view"
            android:text="Admin"
            android:textSize="24sp"
            android:textColor="#000000"
            android:padding="10dp"
            android:gravity="center"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background_view"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/currentDateTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/current_date"
                android:textSize="24sp"
                android:textColor="#000000"
                android:padding="10dp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/clock_in"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/clockIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/kosong"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/clock_out"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/clockOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/kosong"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/istirahat"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/istirahat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/kosong"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/after_break"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/afterBreak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/kosong"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_view"
            android:text="User"
            android:textSize="24sp"
            android:textColor="#000000"
            android:padding="10dp"
            android:gravity="center"/>

        <LinearLayout
            android:id="@+id/userLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background_view"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/userCurrentDateTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/current_date"
                android:textSize="24sp"
                android:textColor="#000000"
                android:padding="10dp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/clock_in"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/userClockIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/kosong"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/clock_out"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/userClockOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/kosong"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/istirahat"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/userIstirahat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/kosong"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/after_break"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/userAfterBreak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/kosong"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>